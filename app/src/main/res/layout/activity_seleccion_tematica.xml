<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar con botón up -->
    <LinearLayout
        android:id="@+id/topBarTematica"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/border_black"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnUp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:tint="@android:color/black"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Volver"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/topBarTitleTematica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appis Iot lab1"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBienvenidoTematica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/topBarTematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvSeleccioneTematica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una temática"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenidoTematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Opciones -->
    <LinearLayout
        android:id="@+id/opcionesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvSeleccioneTematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Redes"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_black"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ciberseguridad"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_black"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Fibra óptica"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_black"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
